{
    "name": "schenke-io/laravel-invoice",
    "description": "Currency and Invoices in Laravel",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "archtechx/enums": "^v1.1",
        "illuminate/contracts": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/validation": "^12.0",
        "livewire/livewire": "^3.0",
        "spatie/laravel-data": "^4.0",
        "spatie/laravel-package-tools": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan-phpunit": "^1.0",
        "schenke-io/packaging-tools": "^0.0",
        "pestphp/pest": "^3.8",
        "laravel/pint": "^1.24"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SchenkeIo\\Invoice\\InvoiceServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "SchenkeIo\\Invoice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": "SchenkeIo\\PackagingTools\\Setup::handle",
        "low": "composer update --prefer-lowest --prefer-dist",
        "stable": "composer update --prefer-stable --prefer-dist",
        "analyse": "vendor/bin/phpstan analyse",
        "coverage": "vendor/bin/pest --coverage",
        "markdown": "php resources/make-markdown.php",
        "pint": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "menu": "SchenkeIo\\PackagingTools\\DeveloperMenu::handle",
        "check": [
            "@pint",
            "@test"
        ],
        "release": [
            "@markdown",
            "@pint",
            "@analyse",
            "@coverage"
        ],
        "add": [
            "composer require --dev pestphp/pest"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
